<!DOCTYPE html>
<html>
  <head>
    <title>App</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "style1", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "examples", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
  <% if user_signed_in? == false %>
    <header>
      <nav class="navbar navbar-expand navbar-light">
        <%= link_to "サンプル", root_path, class: 'navbar-brand' %>
        <div id="Navber">
          <ul class="navbar-nav">
            <% if user_signed_in? %>
              <li class="nav-item active">
                <%= link_to 'アカウント編集', edit_user_registration_path, class: 'nav-link' %>
              </li>
              <li class="nav-item active">
                <%= link_to 'ログアウト', destroy_user_session_path, data: {"turbo-method": :delete}, class: 'nav-link' %>
              </li>
            <% else %>
              <li class="nav-item active">
                <%= link_to "新規登録", new_user_registration_path, class: 'nav-link' %>
              </li>
              <li class="nav-item active">
                <%= link_to "ログイン", new_user_session_path, class: 'nav-link' %>
              </li>
            <% end %>
          </ul>
        </div>
      </nav>
    </header>
  <% end %>
    <%= yield %>
  </body>
</html>
